<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
    <servlet>
        <servlet-name>DownloadLogFileServlet</servlet-name>
        <servlet-class>DownloadLogFileServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>DownloadLogFileServlet</servlet-name>
        <url-pattern>/DownloadLogFileServlet</url-pattern>
    </servlet-mapping>

  <context-param>
    <param-name>logsDirectory</param-name>
	<param-value>/var/log/tomcat7/</param-value>
  </context-param>

    <security-role>
        <role-name>logs</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                Entire Application
            </web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>logs</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Protected Area</realm-name>
    </login-config>


</web-app>

